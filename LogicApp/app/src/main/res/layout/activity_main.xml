<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/A4TV"
        android:layout_width="25dp"
        android:layout_height="22dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="264dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/B4TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"

        android:layout_marginTop="264dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/A3TV"
        android:layout_width="25dp"
        android:layout_height="22dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="212dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/B3TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"

        android:layout_marginTop="212dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/A2TV"
        android:layout_width="25dp"
        android:layout_height="22dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="156dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/B2TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"

        android:layout_marginTop="156dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/A1TV"
        android:layout_width="25dp"
        android:layout_height="22dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="104dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/B1TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"

        android:layout_marginTop="104dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/QuiztypeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Conjuction (AND)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="25dp"
        android:layout_height="22dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:text="A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/propositionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="212dp"
        android:layout_marginTop="44dp"

        android:text="A^B"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"

        android:layout_marginTop="44dp"

        android:text="B"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="36dp"
        android:text="Submit"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B4TV" />

    <ToggleButton
        android:id="@+id/fourthTB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="ToggleButton"
        android:textColorHighlight="#4CAF50"
        android:textOff="@string/falseVal"
        android:textOn="@string/trueVal"
        app:layout_constraintStart_toEndOf="@+id/B4TV"
        app:layout_constraintTop_toBottomOf="@+id/thirdTB" />

    <ToggleButton
        android:id="@+id/thirdTB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="ToggleButton"
        android:textColorHighlight="#4CAF50"
        android:textOff="@string/falseVal"
        android:textOn="@string/trueVal"
        app:layout_constraintStart_toEndOf="@+id/B3TV"
        app:layout_constraintTop_toBottomOf="@+id/secondTB" />

    <ToggleButton
        android:id="@+id/secondTB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="ToggleButton"
        android:textColorHighlight="#4CAF50"
        android:textOff="@string/falseVal"
        android:textOn="@string/trueVal"
        app:layout_constraintStart_toEndOf="@+id/B2TV"
        app:layout_constraintTop_toBottomOf="@+id/firstTB" />

    <ToggleButton
        android:id="@+id/firstTB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        android:text="ToggleButton"
        android:textColorHighlight="#4CAF50"
        android:textColorLink="#4CAF50"
        android:textOff="@string/falseVal"
        android:textOn="@string/trueVal"
        app:layout_constraintStart_toEndOf="@+id/B1TV"
        app:layout_constraintTop_toBottomOf="@+id/propositionTV" />


</androidx.constraintlayout.widget.ConstraintLayout>